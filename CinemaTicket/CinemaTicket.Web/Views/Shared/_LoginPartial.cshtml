@using Microsoft.AspNetCore.Identity
@using CinemaTicket.Domain.Idenitity

@inject SignInManager<CinemaTicketUser> SignInManager
@inject UserManager<CinemaTicketUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity.Name!</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Acount" asp-action="Logout">Log Out</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Acount" asp-action="Register">Register</a>
        </li>

        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Acount" asp-action="Login">Login</a>
        </li>
    }
</ul>